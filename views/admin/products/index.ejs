<body>
<h1>Products</h1>
<a href="/products/create" class="btn btn-link">new</a>
<div class="container d-flex flex-wrap justify-content-around">
        <% products.forEach(function (product,i) { %>
            <h1></h1>
            <div class="card m-4" style="width: 18rem;">
                <img src="<%= product.linkimg%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= i%>    <%= product.name%></h5>
                    <p class="card-text"><%= product.descreption%>
                    <p>Gi√°: <%= product.price | 0%></p>
                    <a href="/products/<%= product._id%>">edit</a>
                </div>
            </div>
        <%});%>
</div>

</body>
</html>